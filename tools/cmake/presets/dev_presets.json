{
  "version": 10,
  "include": [
    "base_presets.json",
    "compiler_presets.json",
    "package_manager_presets.json",
    "tooling_presets.json",
    "analysis_presets.json"
  ],
  "configurePresets": [
    {
      "name": "default-msvc",
      "description": "Development configure presets for windows",
      "inherits": ["build-defaults", "vcpkg", "win64"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "dev-msvc",
      "description": "Development configure presets for windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "inherits": ["build-defaults", "vcpkg", "win64", "docs"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "analysis-msvc",
      "description": "All configure presets for windows, including static analysis tooling",
      "inherits": ["dev-msvc", "cppcheck", "clang-tidy-msvc"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "full-dev-msvc",
      "description": "Full development configure presets for windows with tests and benchmarks",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "inherits": ["build-defaults", "vcpkg", "tests", "benchmarks", "win64", "docs"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "default-unix",
      "description": "Development configure presets for unix",
      "inherits": ["build-defaults", "vcpkg", "unix"],
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "dev-unix",
      "description": "Development configure presets for unix",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "inherits": ["build-defaults", "vcpkg", "unix", "docs"],
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "analysis-unix",
      "description": "All configure presets for unix, including static analysis tooling",
      "inherits": ["dev-unix", "clang-tidy", "cppcheck"],
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "full-dev-unix",
      "description": "Full development configure presets for unix with tests and benchmarks",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "inherits": ["build-defaults", "vcpkg", "tests", "benchmarks", "unix", "docs"],
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}
